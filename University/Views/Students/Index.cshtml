@{
  Layout = "_Layout";
}

@using University.Models;
@model List<University.Models.Student>;

<h1>List of Students</h1>

@if (@Model.Count == 0)
{
  <p>There are no registered students.</p>
}

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId })</li>
}

